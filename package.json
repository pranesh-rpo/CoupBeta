{
  "name": "beige-bot",
  "version": "1.0.0",
  "description": "BeigeBot - Telegram bot for automated messaging to groups using MTProto API",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "dev": "node --watch src/index.js",
    "pm2:start": "pm2 start ecosystem.config.cjs --env production",
    "pm2:stop": "pm2 stop beige-bot",
    "pm2:restart": "pm2 restart beige-bot",
    "pm2:delete": "pm2 delete beige-bot",
    "pm2:logs": "pm2 logs beige-bot",
    "pm2:monit": "pm2 monit",
    "pm2:save": "pm2 save",
    "pm2:startup": "pm2 startup",
    "production": "NODE_ENV=production node src/index.js"
  },
  "keywords": [
    "telegram",
    "bot",
    "automation",
    "mtproto"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.13.4",
    "better-sqlite3": "^11.6.0",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "node-telegram-bot-api": "^0.66.0",
    "pm2": "^6.0.14",
    "qrcode": "^1.5.4",
    "telegram": "^2.25.0"
  }
